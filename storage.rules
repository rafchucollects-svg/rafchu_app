rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can only upload/read their own
    match /profile-pictures/{userId} {
      allow read: if true; // Public read for profile pictures
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Message images - users can upload for conversations they're part of
    match /message-images/{conversationId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Community image submissions (pending review)
    match /community-images/pending/{filename} {
      // Authenticated users can upload images for review
      allow create: if request.auth != null 
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*');
      
      // Anyone can read (for preview in admin panel)
      allow read: if true;
      
      // Only admins can delete pending images
      allow delete: if request.auth != null 
                    && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Approved community images (public)
    match /community-images/approved/{filename} {
      // Anyone can read approved images
      allow read: if true;
      
      // Only admins can write/delete approved images
      allow write, delete: if request.auth != null 
                            && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
